    <style>
        /* Estilos do modal */
        .modal {
            display: none; /* Oculta o modal por padr√£o */
            position: fixed; /* Posicionamento fixo */
            z-index: 1; /* Define a ordem de empilhamento */
            left: 0;
            top: 0;
            width: 100%;
            height: 100%;
            overflow: auto; /* Habilita a rolagem caso o conte√∫do do modal seja maior que a tela */
            background-color: rgba(0, 0, 0, 0.4); /* Cor de fundo semi-transparente */
            border-radius: 25px;

        }

        .modal-content {
            background-color: #FFFFFF;
            margin: 10% auto; /* Centraliza o modal verticalmente */
            padding: 20px;
            border: 15px solid #9B0303;
            width: 80%;
            max-width: 500px;
            border-radius: 25px;

        }

        .close {
            color: #aaa;
            float: right;
            font-size: 28px;
            font-weight: bold;
        }

        .close:hover,
        .close:focus {
            color: black;
            text-decoration: none;
            cursor: pointer;
        }

        .input-container {
            margin-bottom: 10px;
        }

        .input-container label {
            display: block;
            font-weight: bold;
            margin-bottom: 5px;
        }

        .input-container input {
            width: 100%;
            padding: 5px;
            border-radius: 20px;
            background-color: #E7E7E7;
        }

        .input-container select {
            width: 100%;
            padding: 5px;
            border-radius: 20px;
        }

        .modal-buttons {
            text-align: right;
        }

        .modal-buttons button {
            margin-left: 5px;
            border-radius: 20px;
            background-color: #9B0303;
        }

        .input-container {
            display: flex;
            justify-content: space-between;
        }

        .modal-buttons {
            display: flex;
            justify-content: flex-end;
            border-radius: 20px;
        }

        .modal-buttons button:first-child {
            margin-right: 5px;
        }


    </style>
</head>

